<%- include('partials/headerProfile') -%>

<body class="bg-cyan-50">
	<div class="flex justify-center items-center mt-40 mb-64 text-6xl font-serif font-normal text-emerald-950">
		<h1>Explore</h1>
	</div>
	<div class="flex justify-center">
		<div class="grid grid-cols-1 sm:grid-cols-2 gap-28 justify-center mb-24">
			<% for (let i = 0; i < allPosts.length; i++) { %>
				<div class="drop-shadow-xl shadow-2xl rounded-2xl px-12 py-12">
					<img src= '<%= allPosts[i].image %>' class='max-w-2xl max-h-2xl mb-4'</img>
					<h3 class="text-2xl font-sans font-semibold text-emerald-950 mb-4"><%= allPosts[i].likes %> likes</h3>				
					<h3 class="text-4xl font-sans font-bold text-emerald-950 mb-4"><%= allPosts[i].tripName %></h3>				
					<h3 class="text-xl font-sans text-emerald-950 mb-2">Posted at <%= allPosts[i].createdAt.toLocaleString(undefined, {hour: '2-digit', minute: '2-digit', second: '2-digit'}) %></h3>				
					<h3 class="text-xl font-sans text-emerald-950 mb-4">Posted on <%= allPosts[i].createdAt.toLocaleString(undefined, {year: 'numeric', month: '2-digit', day: '2-digit'}) %></h3>				
					<h3 class="text-2xl font-sans font-semibold text-emerald-950 mb-8"><%= allPosts[i].user.userName %></h3>
					<a href="/explore/<%= allPosts[i]._id %>" class="text-emerald-950 text-3xl font-sans font-semibold"><button class="bg-teal-500 px-20 py-4 rounded-xl hover:bg-teal-300">See this</button></a>
	
				</div>
			<% } %>
		</div>
	</div>
	
</body>
	
