<%- include('partials/headerIndex') -%>

  <div class="flex">
    <div class="w-2/3">
      <img src="/img/loginimage.png" alt="">
    </div>
    <div class="flex w-1/3 px-8 items-center justify-center bg-cyan-50">
        <% if (locals.messages.errors) { %>
            <% messages.errors.forEach( el => { %>
                <div class="alert alert-danger text-red-800 text-2xl font-sans"><%= el.msg %></div>
            <% }) %>    
        <% } %>
        <% if (locals.messages.info) { %>
            <% messages.info.forEach( el => { %>
                <div class="alert alert-info text-red-800 text-2xl font-sans"><%= el.msg %></div>
            <% }) %>    
        <% } %>
        <form action="/signup" method="POST" class="flex flex-col items-center">
            <div class="mb-8 flex flex-col items-center">
                <label for="userName" class="text-emerald-950 font-sans text-2xl text-center">User Name</label>
                <div>
                  <input type="text" name="userName" class="bg-slate-300 py-4 px-4 rounded-3xl mt-8 w-96">
                </div>                  
              </div>
            <div class="mb-8 flex flex-col items-center">
              <label for="exampleInputEmail1" class="text-emerald-950 font-sans text-2xl text-center">Email address</label>
              <div>
                <input type="email" aria-describedby="emailHelp" name="email" class="bg-slate-300 py-4 px-4 rounded-3xl mt-8 w-96">
              </div>
            </div>
            <div class="mb-8 flex flex-col items-center">
              <label for="password" class="text-emerald-950 font-sans text-2xl text-center">Password</label>
              <div>
                <input type="password" name="password" class="bg-slate-300 py-4 px-4 rounded-3xl mt-8 w-96">
              </div>
            </div>
            <div class="mb-8 flex flex-col items-center">
                <label for="confirmPassword" class="text-emerald-950 font-sans text-2xl text-center">Confirm Password</label>
                <div>
                  <input type="password" name="confirmPassword" class="bg-slate-300 py-4 px-4 rounded-3xl mt-8 w-96">
                </div>
              </div>
            <div class="mt-4">
              <button type="submit" class="text-white font-sans text-2xl bg-emerald-950 px-5 py-5 rounded-3xl hover:bg-emerald-600">Submit</button>
            </div>
          </form>
    </div>
  </div>

